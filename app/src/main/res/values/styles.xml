<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 首页底部导航栏按钮 -->
    <style name="main_navigation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/main_navigator_color</item>
        <item name="android:textSize">9sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="dialog_view_theme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="dialog_view_animation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/loading_dialog_view_in_anim</item>
        <item name="android:windowExitAnimation">@anim/loading_dialog_view_out_anim</item>
    </style>

</resources>