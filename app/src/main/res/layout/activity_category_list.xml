<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.CategoryListActivity"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/red7"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/cla_btn_go_back"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back_title"
            android:layout_width="20dp"
            android:layout_height="20dp"></Button>
        <TextView
            android:id="@+id/cla_tv_title"
            android:gravity="center"
            android:layout_gravity="center_vertical"
          android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/grey32"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:text="@string/category_list_activity_title_delicacy"></TextView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:id="@+id/cla_rv_list">



    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>